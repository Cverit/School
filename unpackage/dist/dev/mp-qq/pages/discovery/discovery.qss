.location-icon-size {
	font-size: 32rpx;
}
.bg-f5-white {
	background-color: #f5f5f5;
}
.location-text-color {
	color: #808080;
}
.text-theme-color {
	background-image: -webkit-linear-gradient(45deg, #467385, #343A4F);
	-webkit-background-clip: text;
	-webkit-text-fill-color: transparent;
}
.active-text-border{
	border-bottom: 4rpx solid #3E576B;
}
.bg-theme-green-black {
	background-image: -o-linear-gradient(45deg, #467385, #343A4F);
	background-image: linear-gradient(45deg, #467385, #343A4F);
	color: #fffff;
}
.bg-theme-blue-black {
	background-image: -o-linear-gradient(45deg, #343A4E, #5B6C93);
	background-image: linear-gradient(45deg, #343A4E, #5B6C93);
	/* background-color: #3E5768; */
	color: #fffff;
}
.no-padding {
	padding: 0;
}
.discovery-swiper {
	height: 700px;
	overflow: hidden;
}
.discovery-container {
	position: fixed;
	height: 100%;
	width: 100%;
}
.border-radius {
	border-radius: 20rpx;
}
.poi-info {
	width: 80%;
}
.poi-text {
	margin: 8rpx 0;
	letter-spacing: 1rpx;
	width: 80%;
}
.poi-text-bold {
	font-size: 28rpx;
	font-weight: 600;
	color: #222222;
}
.poi-distance {
	float: right;
	font-size: 28rpx;
	font-weight: 600;
	color: #222222;
}


