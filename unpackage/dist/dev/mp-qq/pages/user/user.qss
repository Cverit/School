	height: 480rpx;
}
.avatar-button {
	width: 128rpx;
	height: 128rpx;
	border-radius: 50%;
}
.avatar-shadow {
	padding: 1rpx;
	-webkit-box-shadow: 4rpx 4rpx 2rpx rgba(26, 26, 26, 0.2);
	        box-shadow: 4rpx 4rpx 2rpx rgba(26, 26, 26, 0.2);
}
.text-school {
	font-size: 24rpx;
	color: #FFFFFF;
	letter-spacing: 2rpx;
}
.user-info-container {
	width: 90%;
	height: 150rpx;
	border-radius: 10rpx;
	background: #FFFFFF;
	margin: 0 5%;
	position: relative;
	top: -100rpx;
}
.user-info-title-ftext {
	font-size: 24rpx;
	color: #888888;
	letter-spacing: 1rpx;
