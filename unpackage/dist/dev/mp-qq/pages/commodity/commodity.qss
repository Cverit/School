.info-border-bottom {
	border-bottom: 2rpx solid #f1f1f1;
}
.info-border-top {
	border-top: 4rpx solid #f1f1f1;
}
.flex-column {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	    -ms-flex-direction: column;
	        flex-direction: column;
}
.view-user-name {
	font-weight: 700;
	color: #222222;
	font-size: 30rpx;
	letter-spacing: 1rpx;
}
.view-user-location {
	/* font-weight: 700; */
	color: #555;
	margin: auto 0;
	font-size: 24rpx;
	letter-spacing: 1rpx;
}
.price-text {
	color: #DE5145;
	font-size: 30rpx;
	font-weight: 700;
	letter-spacing: 1rpx;
}
.commodity-name {
	font-weight: 700;
	color: #222222;
	font-size: 34rpx;
	letter-spacing: 1rpx;
}
.commodity-description {
	color: #444444;
	font-size: 26rpx;
	letter-spacing: 1rpx;
	line-height: 42rpx;
}
.commodity-image-container {
	width: 100%;
}
.commodity-image {
	width: 100%;
	border-radius: 30rpx;
}
.commodity-icon {
	font-size: 44rpx !important;
	margin: 0 !important;
}
.none-default-image {
	width: 60%;
}
.comment-container-title {
	width: 100%;
	padding-bottom: 30rpx;
	font-weight: 700;
	/* text-align: center; */
	color: #222222;
}
.left {
	width: 100px;
	height: 2px;
	background: -o-linear-gradient(left, rgba(59, 76, 96, 0.6), #f1f1f1);
	background: -webkit-gradient(linear, right top, left top, from(rgba(59, 76, 96, 0.6)), to(#f1f1f1));
	background: -o-linear-gradient(right, rgba(59, 76, 96, 0.6), #f1f1f1);
	background: linear-gradient(to left, rgba(59, 76, 96, 0.6), #f1f1f1);
}
.right {
	width: 100px;
	height: 2px;
	background: -o-linear-gradient(right, rgba(59, 76, 96, 0.6), #f1f1f1);
	background: -webkit-gradient(linear, left top, right top, from(rgba(59, 76, 96, 0.6)), to(#f1f1f1));
	background: -o-linear-gradient(left, rgba(59, 76, 96, 0.6), #f1f1f1);
	background: linear-gradient(to right, rgba(59, 76, 96, 0.6), #f1f1f1);
}
.commodity-recommend-title {
	font-size: 30rpx;
	font-weight: 700;
}
.time-text {
	margin-left: 85rpx;
	font-size: 24rpx;
	color: #bbb;
}

