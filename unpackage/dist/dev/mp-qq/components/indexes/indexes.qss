.choose-search-bar {
	position: fixed;
	width: 100%;
	z-index: 500;
	background-color: #f1f1f1;
}
.picker-list-view {
	margin-top: 100rpx;
}
.wxaSortPickerTemTags {
	position: fixed;
	top: 56%;
	right: 20rpx;
	color: #AAAAAA;
	-webkit-transform: translate(0, -50%);
	    -ms-transform: translate(0, -50%);
	        transform: translate(0, -50%);
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	font-size: 22rpx;
}
.wxaSortPickerTemTag {
	text-align: center;
	padding: 4rpx;
	line-height: 34rpx;
}
.wxaSortPickerFixedTag {
	position: fixed;
	width: 100%;
}
.wxaSortPickerTag {
	background-color: #f1f1f1;
	font-size: 24rpx;
	font-weight: bold;
	color: #363E53;
	height: 50rpx;
	line-height: 50rpx;
	padding: 0 32rpx;
}
.wxaSortPickerItem-box {
	background-color: #fff;
	padding: 0 32rpx;
}
.wxaSortPickerItem {
	height: 88rpx;
	line-height: 88rpx;
	border-bottom: 1px solid #DEE4E4;
	color: #46595F;
	font-size: 32rpx;
}
.wxaSortPickerItem:last-child {
	border-bottom: none;
}
.none-tips {
	height: 150rpx !important;
	line-height: 150prx !important;
	font-size: 24rpx;
	color: #AAAAAA;
}
.button-text {
	color: #3D5569;
	font-size: 24rpx;
	font-weight: 700;
	letter-spacing: 4rpx;
}

